from kivy.lang import Builder
from kivymd.app import MDApp
from kivy.metrics import dp

<InterfaceToolScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppbar:
            title: 'Interface Tools'
            elevation: 10
            md_bg_color: app.theme_cls.primary_color
            specific_text_color: 1, 1, 1, 1
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(20)
                CustomLabel:
                    text: 'Select Interface'
                CustomTextField:
                    id: interface_input
                    hint_text: 'Select Interface'
                    on_focus: if self.focus: root.show_interface_dropdown()
                CustomButton:
                    text: 'Refresh Interfaces'
                    on_release: root.refresh_interfaces()
                CustomLabel:
                    text: 'Select SSID'
                CustomTextField:
                    id: ssid_input
                    hint_text: 'Select SSID'
                    on_focus: if self.focus: root.show_ssid_dropdown()
                CustomButton:
                    text: 'Refresh SSIDs'
                    on_release: root.refresh_ssids()
                CustomButton:
                    text: 'Start T-Shark Monitoring'
                    on_release: root.set_screen('tshark')
                CustomButton:
                    text: 'Start Nmap Scanning'
                    on_release: root.set_screen('nmap')
                CustomButton:
                    text: 'Ghost Mode'
                    on_release: root.set_screen('ghostmode')
                CustomButton:
                    text: 'Start Post Exploitation'
                    on_release: root.set_screen('postexploitation')
                CustomButton:
                    text: 'Start PyShark Monitoring'
                    on_release: root.set_screen('pyshark')

<CustomButton@MDRaisedButton>:
    md_bg_color: app.theme_cls.primary_color

<CustomLabel@MDLabel>:
    halign: 'center'
    theme_text_color: 'Secondary'
    size_hint_y: None
    height: self.texture_size[1]

<CustomTextField@MDTextField>:
    readonly: True
    size_hint_x: None
    width: 300
    pos_hint: {'center_x': 0.5}