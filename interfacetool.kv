<InterfaceToolScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: 'Interface Tools'
            elevation: 10
            # Add left/right action items if needed

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(20)

                MDLabel:
                    text: 'Select Interface'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSpinner:
                    id: interfaces_spinner
                    text: 'Select Interface'
                    values: ()
                    on_text: root.on_interface_select(self, self.text)

                MDRaisedButton:
                    text: 'Refresh Interfaces'
                    on_press: root.refresh_interfaces()

                MDLabel:
                    text: 'Select SSID'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSpinner:
                    id: ssid_spinner
                    text: 'Select SSID'
                    values: ()

                MDRaisedButton:
                    text: 'Refresh SSIDs'
                    on_press: root.refresh_ssids()

                MDRaisedButton:
                    text: 'Start T-Shark Monitoring'
                    on_press: root.set_screen('tshark')

                MDRaisedButton:
                    text: 'Start Nmap Scanning'
                    on_press: root.set_screen('nmap')

                MDRaisedButton:
                    text: 'Ghost Mode'
                    on_press: root.set_screen('ghostmode')

                MDRaisedButton:
                    text: 'Start Post Exploitation'
                    on_press: root.set_screen('postexploitation')

                MDRaisedButton:
                    text: 'Start PyShark Monitoring'
                    on_press: root.set_screen =('pyshark')
