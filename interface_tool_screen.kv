<CustomDropDown>:
    id: dropdown
    size_hint_y: None
    height: dp(48)
    on_release: app.root.show_dropdown(self, self.ids.button)

    MDRaisedButton:
        id: button
        text: 'Select Interface'
        size_hint: None, None
        size: dp(200), dp(48)
        pos_hint: {'center_x': 0.5}
        on_release: dropdown.open(self)

<InterfaceToolScreen>:
    FloatLayout:

        Image:
            source: './willy_wifi.png'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        # Semi-transparent overlay
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            background_color: rgba(0, 0, 0, .7)

            # Custom dropdown for interface selection
            CustomDropDown:
                id: interface_dropdown

            # Refresh button with a modern look
            MDRaisedButton:
                text: 'Refresh Interfaces'
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                md_bg_color: 0.25, 0.25, 0.25, 1
                text_color: 1, 1, 1, 1
                on_release: root.refresh_interfaces()
                elevation_normal: 2


<InterfaceToolScreen>:
    FloatLayout:  # Allows for overlaying widgets

        # Fullscreen background image
        Image:
            source: './background.jpg'
            allow_stretch: True
            keep_ratio: False
            size_hint: 1, 1

        # Semi-transparent overlay
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 1
            background_color: rgba(0, 0, 0, .7)  # Adjust opacity as needed

            # This BoxLayout now acts as a container for your widgets
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(20)

                # Stylish title label
                MDLabel:
                    text: 'Select Interface'
                    halign: 'center'
                    valign: 'middle'
                    size_hint_y: None
                    font_style: 'H5'
                    color: 1, 1, 1, 1  # White color text

                # Interactive and styled text field
                MDTextField:
                    id: interface_input
                    hint_text: 'Select Interface'
                    readonly: True
                    size_hint_x: None
                    width: '250dp'
                    pos_hint: {'center_x': 0.5}
                    line_color_normal: 1, 1, 1, 1  # White color
                    line_color_focus: 0.5, 0.5, 0.5, 1  # Grey color for focus
                    foreground_color: 1, 1, 1, 1  # White color text

                # Refresh button with a modern look
                MDRaisedButton:
                    text: 'Refresh Interfaces'
                    pos_hint: {'center_x': 0.5}
                    md_bg_color: 0.5, 0.5, 0.5, 1  # Grey
                    text_color: 1, 1, 1, 1  # White color text
                    on_release: root.refresh_interfaces()
                    elevation_normal: 2

            # ... Add additional widgets with similar styling ...
