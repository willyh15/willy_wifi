<InterfaceToolScreen>:
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: 'Interface Tools'
            elevation: 10
            # Specify action items if needed

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(10)
                padding: dp(20)

                MDLabel:
                    text: 'Select Interface'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSpinner:
                    id: interfaces_spinner
                    hint_text: 'Select Interface'
                    values: ()
                    on_text: root.on_interface_select(self, self.text)
                    size_hint_x: None
                    width: 300
                    pos_hint: {'center_x': 0.5}

                MDRaisedButton:
                    text: 'Refresh Interfaces'
                    on_release: root.refresh_interfaces()
                    md_bg_color: app.theme_cls.primary_color

                MDLabel:
                    text: 'Select SSID'
                    halign: 'center'
                    theme_text_color: 'Secondary'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDSpinner:
                    id: ssid_spinner
                    hint_text: 'Select SSID'
                    values: ()
                    size_hint_x: None
                    width: 300
                    pos_hint: {'center_x': 0.5}

                MDRaisedButton:
                    text: 'Refresh SSIDs'
                    on_release: root.refresh_ssids()
                    md_bg_color: app.theme_cls.primary_color

                # Other buttons for different functionalities
                MDRaisedButton:
                    text: 'Start T-Shark Monitoring'
                    on_release: root.set_screen('tshark')
                    md_bg_color: app.theme_cls.primary_color

                MDRaisedButton:
                    text: 'Start Nmap Scanning'
                    on_release: root.set_screen('nmap')
                    md_bg_color: app.theme_cls.primary_color

                MDRaisedButton:
                    text: 'Ghost Mode'
                    on_release: root.set_screen('ghostmode')
                    md_bg_color: app.theme_cls.primary_color

                MDRaisedButton:
                    text: 'Start Post Exploitation'
                    on_release: root.set_screen('postexploitation')
                    md_bg_color: app.theme_cls.primary_color

                MDRaisedButton:
                    text: 'Start PyShark Monitoring'
                    on_release: root.set_screen('pyshark')
                    md_bg_color: app.theme_cls.primary_color
